generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Product {
  id           String    @id @default(cuid())
  title        String
  description  String
  price        Float
  affiliateUrl String
  imageUrl     String
  mediaType    MediaType @default(IMAGE)
  category     Category  @relation(fields: [categoryId], references: [id])
  categoryId   String
  clicks       Int       @default(0)
  featured     Boolean   @default(false)
  rating       Float     @default(4.8) // Average rating from Shopee (0-5)
  reviewCount  Int       @default(0)   // Number of reviews from Shopee
  originalPrice Float?                 // Original price for comparison
  soldCount    Int       @default(0)   // Number of items sold
  stock        Int?                    // Stock quantity (null = unlimited)
  saleEndDate  DateTime?               // Sale end date for countdown timer
  isBestSeller Boolean   @default(false) // Best seller badge
  isLimited    Boolean   @default(false) // Limited edition badge
  launchedAt   DateTime?               // Product launch date (for "New" badge)
  reviews      Review[]                // User reviews with photos/videos
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([featured])
  @@index([categoryId])
  @@index([createdAt])
  @@index([clicks])
  @@index([rating])
  @@index([price])
  @@index([featured, createdAt])
  @@index([categoryId, rating])
  @@index([categoryId, clicks])
  @@index([categoryId, price])
}

enum MediaType {
  IMAGE
  VIDEO
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  products Product[]
}

enum Role {
  USER
  ADMIN
}

model Review {
  id          String        @id @default(cuid())
  product     Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId   String
  userName    String        // Display name of reviewer
  userEmail   String?       // Optional email for verification
  rating      Int           // 1-5 stars
  comment     String        @db.Text // Review text
  verified    Boolean       @default(false) // Verified purchase badge
  helpful     Int           @default(0) // Helpful vote count
  media       ReviewMedia[] // Photos and videos
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([productId])
  @@index([rating])
  @@index([createdAt])
  @@index([verified])
}

model ReviewMedia {
  id        String    @id @default(cuid())
  review    Review    @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId  String
  url       String    // Image or video URL
  type      MediaType // IMAGE or VIDEO
  order     Int       @default(0) // Display order
  createdAt DateTime  @default(now())

  @@index([reviewId])
  @@index([type])
}
