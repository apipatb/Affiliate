generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Product {
  id           String    @id @default(cuid())
  title        String
  description  String
  price        Float
  affiliateUrl String
  imageUrl     String    // Primary/thumbnail image (backward compatible)
  mediaType    MediaType @default(IMAGE)
  platform     Platform  @default(SHOPEE) // Source platform
  category     Category  @relation(fields: [categoryId], references: [id])
  categoryId   String
  clicks       Int       @default(0)
  featured     Boolean   @default(false)
  rating       Float     @default(4.8) // Average rating (0-5)
  reviewCount  Int       @default(0)   // Number of reviews
  originalPrice Float?                 // Original price for comparison
  soldCount    Int       @default(0)   // Number of items sold
  stock        Int?                    // Stock quantity (null = unlimited)
  saleEndDate  DateTime?               // Sale end date for countdown timer
  isBestSeller Boolean   @default(false) // Best seller badge
  isLimited    Boolean   @default(false) // Limited edition badge
  launchedAt   DateTime?               // Product launch date (for "New" badge)
  media        ProductMedia[]          // Product gallery (multiple images/videos)
  reviews      Review[]                // User reviews with photos/videos
  clickLogs    ClickLog[]              // Click history for analytics
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([featured])
  @@index([categoryId])
  @@index([createdAt])
  @@index([clicks])
  @@index([rating])
  @@index([price])
  @@index([platform])
  @@index([featured, createdAt])
  @@index([categoryId, rating])
  @@index([categoryId, clicks])
  @@index([categoryId, price])
}

enum MediaType {
  IMAGE
  VIDEO
}

enum Platform {
  SHOPEE
  LAZADA
  AMAZON
  ALIEXPRESS
  TIKTOK
  OTHER
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  products Product[]
}

enum Role {
  USER
  ADMIN
}

model Review {
  id          String        @id @default(cuid())
  product     Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId   String
  userName    String        // Display name of reviewer
  userEmail   String?       // Optional email for verification
  rating      Int           // 1-5 stars
  comment     String        @db.Text // Review text
  verified    Boolean       @default(false) // Verified purchase badge
  helpful     Int           @default(0) // Helpful vote count
  media       ReviewMedia[] // Photos and videos
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([productId])
  @@index([rating])
  @@index([createdAt])
  @@index([verified])
}

model ReviewMedia {
  id        String    @id @default(cuid())
  review    Review    @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId  String
  url       String    // Image or video URL
  type      MediaType // IMAGE or VIDEO
  order     Int       @default(0) // Display order
  createdAt DateTime  @default(now())

  @@index([reviewId])
  @@index([type])
}

model ProductMedia {
  id        String    @id @default(cuid())
  product   Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  url       String    // Image or video URL
  type      MediaType @default(IMAGE) // IMAGE or VIDEO
  order     Int       @default(0) // Display order (0 = first)
  createdAt DateTime  @default(now())

  @@index([productId])
  @@index([productId, order])
  @@index([type])
}

// Blog system for SEO content
model BlogPost {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  excerpt     String       @db.Text // Short description for SEO
  content     String       @db.Text // Full content (HTML/Markdown)
  coverImage  String?      // Cover image URL
  published   Boolean      @default(false)
  featured    Boolean      @default(false)
  views       Int          @default(0)
  author      String       @default("Admin")
  tags        String[]     // Array of tags
  metaTitle   String?      // SEO meta title
  metaDesc    String?      // SEO meta description
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  publishedAt DateTime?

  @@index([published])
  @@index([slug])
  @@index([featured])
  @@index([createdAt])
  @@index([publishedAt])
}

// Click tracking for analytics
model ClickLog {
  id        String   @id @default(cuid())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  platform  Platform @default(SHOPEE)
  createdAt DateTime @default(now())

  @@index([productId])
  @@index([createdAt])
  @@index([platform])
  @@index([createdAt, platform])
}

// ============================================
// TikTok Auto Sales Bot
// ============================================

enum TikTokJobStatus {
  PENDING
  PROCESSING
  DONE
  FAILED
}

enum TikTokPublishType {
  DIRECT_POST    // Publish directly to TikTok
  INBOX_DRAFT    // Send to user's draft/inbox
}

// Connected TikTok accounts for OAuth
model TikTokAccount {
  id              String    @id @default(cuid())
  userId          String    @unique // Internal user ID
  accessToken     String    @db.Text
  refreshToken    String    @db.Text
  tokenExpiresAt  DateTime
  tokenScope      String?   // OAuth scopes granted
  tiktokUserId    String    @unique // TikTok's user ID (open_id)
  tiktokUsername  String?   // TikTok @username
  displayName     String?   // TikTok display name
  avatarUrl       String?   // Profile picture URL
  isActive        Boolean   @default(true)
  dailyPostCount  Int       @default(0) // Track posts per day
  dailyPostResetAt DateTime? // When to reset daily count
  lastPostAt      DateTime? // Last successful post time
  jobs            TikTokJob[] // Jobs posted with this account
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([isActive])
  @@index([tiktokUserId])
}

// TikTok video job for auto-posting
model TikTokJob {
  id               String          @id @default(cuid())
  productId        String          // Platform product ID (SHOPEE-xxx, LAZADA-xxx, TIKTOK-xxx)
  internalProductId String?        // Link to internal Product (Prisma CUID) - for navigation
  affiliateUrl     String?         // Affiliate URL to the product
  productName      String?         // Product name for display
  productImage     String?         // Main product thumbnail
  productImages    String[]        // Multiple images for slideshow video

  // Hook content for video
  hook1        String?         @db.Text // Opening hook
  hook2        String?         @db.Text // Middle hook
  hook3        String?         @db.Text // Closing hook
  ending       String?         @db.Text // Call to action / ending

  // Video info
  videoUrl     String?         // Generated video URL
  caption      String?         @db.Text // Video caption/description
  hashtags     String[]        // Hashtags for video

  // Status tracking
  status       TikTokJobStatus @default(PENDING)
  error        String?         // Error message if failed
  retryCount   Int             @default(0)
  scheduledAt  DateTime?       // When to auto-post (null = manual)
  postedAt     DateTime?       // When video was posted

  // TikTok posting info
  tiktokAccountId  String?       // Account used for posting
  tiktokAccount    TikTokAccount? @relation(fields: [tiktokAccountId], references: [id])
  tiktokPostId     String?       // TikTok's post ID after successful upload
  publishType      TikTokPublishType @default(DIRECT_POST)

  // Progress tracking for video generation
  progress     Int             @default(0) // 0-100 percentage
  progressStep String?         // Current step description

  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@index([status])
  @@index([productId])
  @@index([createdAt])
  @@index([status, createdAt])
  @@index([tiktokAccountId])
  @@index([scheduledAt])
  @@index([status, scheduledAt])          // For cron job queries
  @@index([tiktokAccountId, status])      // For account-specific job queries
  @@index([internalProductId])            // For product lookups
}

// Hook templates for AI generation
model TikTokHookTemplate {
  id          String   @id @default(cuid())
  name        String   // Template name
  category    String?  // Product category this template is for
  hookType    String   // "opening", "middle", "closing", "ending"
  template    String   @db.Text // Template text with placeholders
  isActive    Boolean  @default(true)
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([hookType])
  @@index([category])
  @@index([isActive])
}
